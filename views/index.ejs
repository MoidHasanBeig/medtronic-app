<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Medtronic Registration</title>

  <!-- Bootstrap core CSS -->
  <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>
  <!-- Custom styles for this template -->
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body class="text-center">
  <form class="form-registration" action="/" method="post">
    <img class="mb-4" src="/images/medtroniclogo.jpeg" alt="" width="" height="60">
    <label for="name" class="sr-only">Your name</label>
    <input type="text" name="name" class="form-control top" placeholder="Your name" required autofocus>
    <label for="hospital" class="sr-only">Hospital's name</label>
    <input type="text" name="hospital" class="form-control middle" placeholder="Hospital's name" required autofocus>
    <label for="city" class="sr-only">City</label>
    <input type="text" name="city" class="form-control middle" placeholder="City" required autofocus>
    <label for="speciality" class="sr-only">Speciality</label>
    <input type="text" name="speciality" class="form-control middle" placeholder="Speciality" required autofocus>
    <label for="mob_no" class="sr-only">Mobile number</label>
    <input type="number" name="mob_no" class="form-control middle" placeholder="Mobile number" required autofocus>
    <label for="email" class="sr-only">Email address</label>
    <input type="email" name="email" class="form-control middle" placeholder="Email address" required autofocus>
    <label for="product" class="sr-only">Product interested in</label>
    <input type="text" name="product" class="form-control middle" placeholder="Product interested in" required autofocus>
    <select class="form-control middle" name="user_query">
      <option value="select" class="text-muted" selected>--Select a query--</option>
      <% for(let i=0; i<userQuery.length; i++) { %>
      <option><%= userQuery[i] %></option>
      <% } %>
    </select>
    <label for="remarks" class="sr-only">Remarks</label>
    <input type="text" name="remarks" class="form-control bottom" placeholder="Remarks" required autofocus>
    <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Submit</button>
    <p class="mt-5 mb-3 text-muted">&copy;Mediatronic 2019</p>
  </form>
</body>

</html>
